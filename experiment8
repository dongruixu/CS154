//第一题
#include <iostream>
using namespace std;

bool isPrime(int num);

int main()
{
    int m, n;
    int Count=0;

    cout << "Please input m,n: ";
    cin >> m >> n;

    for(; m<=n; m++)
    {
        if(isPrime(m))     //m是素数，Count加1
            Count++;
    }

    cout << "Count = " << Count << endl;

    return 0;
}

bool isPrime(int num)      //判断num是否为素数
{
    if(num==1)
        return false;
    if(num==2)
        return true;
    if(num%2 == 0)        //偶数不是素数（除了2）
        return false;
    for(int i=3; i<num/2; i++)
    {
        if(num%i == 0)    //有真因数则不是素数
            return false;
    }
    return true;
}

//第二题
#include <iostream>
using namespace std;

bool perfectNumber(int num);
int main()
{
    int m, n;

    cout << "Please input m,n: ";
    cin >> m >> n;

    for(; m<=n; m++)        //m遍历m到n的数
    {
        if(perfectNumber(m))
            cout << m << '\t';
    }

    return 0;
}

bool perfectNumber(int num)   //判断num是否为完全数
{
    int sum=1, i=2;           //1一定是一个正整数的因子

    while(i<=num/2)
    {
        if(num%i == 0)        //i是num的因子，则sum加上i
            sum += i;
        i++;
    }
    if(sum == num)
        return true;
    else
        return false;
}
