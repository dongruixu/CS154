//第一题，判断素数
#include <iostream>
using namespace std;

bool integer(int num);

int main()
{
    int num;
    cout << "请输入一个整数：";
    cin >> num;

    if(integer(num))
        cout << "素数" << endl;
    else
        cout << "合数" << endl;

    return 0;
}

bool integer(int num)
{
    int i;
    if(num == 2)
        return true;
    if(num%2 == 0)
        return false;
    for(i=3; i <= num/2; i++)
    {
        if(num%i == 0)
            return false;
    }
    return true;
}


//第二题
#include <iostream>
#include <cmath>
using namespace std;

double sinx(double, double);

int main()
{
    double x, jd;

    cout << "请输入x的值：";
    cin >> x;
    cout << "请输入精度（输入0则使用默认值）：";
    cin >> jd;
    if(jd == 0)
        jd = 1e-6;

    cout << sinx(x, jd) << endl;

    return 0;
}

double sinx(double x, double jd)   //计算sinx的值，jd为精度
{
    double sum=x, tmp=x;
    double i=1;

    while(abs(tmp) > jd)
    {
        tmp = (-1)*tmp*x*x/(i+1)/(i+2);
        sum += tmp;
        i += 2;
    }

    return sum;
}
  

//第四题
#include <iostream>
using namespace std;

template <class T>     //函数模板
void thesort(T a[], int n);

int main()
{
    char a[5] = {'2','a','5','j','b'};
    thesort(a, 5);
    for(int i=0; i<5; i++)
        cout << a[i] << '\t';

    return 0;
}

template <class T>
void thesort(T a[], int n)   //冒泡排序数组
{
    int i, j;
    T tmp;
    bool flag;

    for(i=0; i<n-1; i++)
    {
        flag = false;
        for(j=0; j<n-i-1; j++)
        {
            if(a[j] > a[j+1])
            {
                tmp = a[j];
                a[j] = a[j+1];
                a[j+1] = tmp;
                flag = true;
            }
        }
        if(!flag)
            break;
    }
}
