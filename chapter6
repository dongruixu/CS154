//第一题，判断素数
#include <iostream>
using namespace std;

bool integer(int num);

int main()
{
    int num;
    cout << "请输入一个整数：";
    cin >> num;

    if(integer(num))
        cout << "素数" << endl;
    else
        cout << "合数" << endl;

    return 0;
}

bool integer(int num)
{
    int i;
    if(num == 2)
        return true;
    if(num%2 == 0)
        return false;
    for(i=3; i <= num/2; i++)
    {
        if(num%i == 0)
            return false;
    }
    return true;
}


//第二题
#include <iostream>
#include <cmath>
using namespace std;

double sinx(double, double);

int main()
{
    double x, jd;

    cout << "请输入x的值：";
    cin >> x;
    cout << "请输入精度（输入0则使用默认值）：";
    cin >> jd;
    if(jd == 0)
        jd = 1e-6;

    cout << sinx(x, jd) << endl;

    return 0;
}

double sinx(double x, double jd)   //计算sinx的值，jd为精度
{
    double sum=x, tmp=x;
    double i=1;

    while(abs(tmp) > jd)
    {
        tmp = (-1)*tmp*x*x/(i+1)/(i+2);
        sum += tmp;
        i += 2;
    }

    return sum;
}
  
//第三题
#include <iostream>
using namespace std;

void stringCopy(char str2[], char str1[]);

int main()
{
    char str1[20];
    char str2[20];

    cout << "请输入字符串1：";
    cin.getline(str1, 20, '\n');

    stringCopy(str2, str1);       //把str1赋值给str2
    cout << str2 << endl;

    return 0;
}

void stringCopy(char str2[], char str1[])
{
    int i = 0;

    while(str1[i] != '\0')       //把字符串的字符逐个复制
    {
        str2[i] = str1[i];
        i++;
    }
    str2[i] = '\0';
}


//第四题
#include <iostream>
using namespace std;

template <class T>     //函数模板
void thesort(T a[], int n);

int main()
{
    char a[5] = {'2','a','5','j','b'};
    thesort(a, 5);
    for(int i=0; i<5; i++)
        cout << a[i] << '\t';

    return 0;
}

template <class T>
void thesort(T a[], int n)   //冒泡排序数组
{
    int i, j;
    T tmp;
    bool flag;

    for(i=0; i<n-1; i++)
    {
        flag = false;
        for(j=0; j<n-i-1; j++)
        {
            if(a[j] > a[j+1])
            {
                tmp = a[j];
                a[j] = a[j+1];
                a[j+1] = tmp;
                flag = true;
            }
        }
        if(!flag)
            break;
    }
}


//第五题
#include <iostream>
using namespace std;

int yueshu(int, int);

int main()
{
    int a, b;

    cout << "请输入a和b的值：";
    cin >> a >> b;

    a = yueshu(a, b);
    cout << a << endl;

    return 0;
}

int yueshu(int a, int b)
{
    int i;
    if(a<b)
    {
        i = b;
        b = a;
        a = i;
    }
    while(a%b != 0)
    {
        i = a % b;
        a = b;
        b = i;
    }
    return b;
}


//第六题
#include <iostream>
using namespace std;

int index(int a[], int num, int i, int j);

int main()
{
    int x;
    int a[10] = {1,3,6,8,10,13,17,20,24,29};
    x = index(a, -1, 0, 9);
    cout << "8µÄÎ»ÖÃÊÇ£º" << x << endl;

    return 0;
}

int index(int a[], int num, int i, int j)
{
    if(i>j)
        return -1;
    else
    {
        int mid;
        mid = (i+j)/2;
        if(a[mid]==num)
            return mid;
        if(a[mid]<num)
        {
            i = mid+1;
            return index(a, num, i, j);
        }
        else
        {
            j = mid-1;
            return index(a, num, i, j);
        }
    }
}

//第八题
#include <iostream>
using namespace std;

void charge(int num);

int main()
{
    int money;

    cout << "请输入找的钱数：";
    cin >> money;

    charge(money);

    return 0;
}

void charge(int num)
{
    if(num <= 0)
        cout << "钱数应为正数。" << endl;
    else
    {
        int yuan;
        yuan = num/10;
        num = num%10;
        cout << "1元硬币数为：" << yuan << endl;
        yuan = num/5;
        num = num%5;
        cout << "5角硬币数为：" << yuan << endl;
        yuan = num/2;
        num = num%2;
        cout << "2角硬币数为：" << yuan << endl;
        cout << "1角硬币数为：" << num << endl;
    }
}
