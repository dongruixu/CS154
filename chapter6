//第一题，判断素数
#include <iostream>
using namespace std;

bool integer(int num);

int main()
{
    int num;
    cout << "请输入一个整数：";
    cin >> num;

    if(integer(num))
        cout << "素数" << endl;
    else
        cout << "合数" << endl;

    return 0;
}

bool integer(int num)
{
    int i;
    if(num == 2)
        return true;
    if(num%2 == 0)
        return false;
    for(i=3; i <= num/2; i++)
    {
        if(num%i == 0)
            return false;
    }
    return true;
}
