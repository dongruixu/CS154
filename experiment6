//第一题
#include <iostream>
using namespace std;

int main()
{
    int Count=0, i=0;
    char str[80];

    cout << "Please input a string: ";
    cin.getline(str,80,'\n');

    while(str[i]!='\0')
    {
        if(str[i]=='A'||str[i]=='E'||str[i]=='I'||str[i]=='O'||str[i]=='U'
           ||str[i]=='a'||str[i]=='e'||str[i]=='i'||str[i]=='o'||str[i]=='u')
            Count++;
        i++;
    }

    cout << "Count = " << Count << endl;

    return 0;
}


//第二题
#include <iostream>
using namespace std;

int main()
{
    char str[80], ch;
    int i=0;

    cout << "Please input a string: ";
    while((str[i]=cin.get()) != '\n')
        i++;
    cout << "Please input a character: ";
    cin >> ch;

    for(i=i-1;i>=0;i--)
    {
        if(str[i]==ch)
            break;
    }
    if(i<0)
        cout << "Not Found" << endl;
    else
        cout << "Index = " << i << endl;

    return 0;
}
